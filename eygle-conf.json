{
  "server": {
    "appName": "Eygle Media Server",
    "port": 4242,
    "dbName": "eygle",
    "dbCollectionsPrefix": "EMS_",
    "debug": false,
    "sessionCookieName": "eygle-connect.sid",
    "implementsAuth": true,
    "includeCronManager": true,
    "includeEmailUnsubscribe": true,
    "activateCSRFSecurity": true,

    "environments": {
      "production": {
        "logger": {
          "type": "file",
          "root": "{{root}}/server/logs",
          "maxLogFiles": 10,
          "allLogsFileName": "{{appName}}-{{env}}-{{pmId}}.log"
        }
      },
      "development": {
        "filesRoot": "/../../../files",
        "activateCSRFSecurity": false
      }
    }
  }
}
